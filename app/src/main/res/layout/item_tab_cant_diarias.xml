<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    class="pe.com.dms.movilasist.ui.adapter.fragments.cantDiaria.CantDiariaAdapter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:selectableItemBackground"
    tools:background="@drawable/selector_item_checkable_check">

    <ImageView
        android:id="@+id/img_folder"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_action_folder"
        android:textColor="@color/colorCardDark"
        android:textSize="@dimen/dynamic_body_text_size"
        android:tint="@color/colorCardDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/content_inset"
        android:gravity="start"
        android:text="@string/cod_personal"
        android:textColor="@color/colorCardDark"
        android:textSize="@dimen/dynamic_body_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/img_folder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_folder"
        app:layout_constraintTop_toTopOf="@id/img_folder" />

</androidx.constraintlayout.widget.ConstraintLayout>