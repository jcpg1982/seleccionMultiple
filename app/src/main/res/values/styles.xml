<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- General Components. -->
        <item name="spinnerStyle">@style/AppTheme.Spinner</item>
        <item name="autoCompleteTextViewStyle">@style/AutoCompleteGeneral</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="InputCustomContainer" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/frame_round_overlay_dark</item>
        <item name="android:paddingTop">@dimen/content_inset_half</item>
        <item name="android:paddingBottom">@dimen/content_inset_half</item>
        <item name="android:paddingLeft">@dimen/content_inset_less</item>
        <item name="android:paddingRight">@dimen/content_inset_less</item>
    </style>

    <style name="AppTheme.Dialog.Error">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorError</item>
        <item name="colorPrimaryDark">@color/colorErrorDark</item>
        <item name="colorAccent">@color/colorErrorLight</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Spinner" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner</item>
    </style>

    <style name="AutoCompleteGeneral" parent="android:Widget.AutoCompleteTextView">
        <item name="android:background">@drawable/radios_background</item>
    </style>

    <!-- Base -->
    <style name="Widget.TextView" parent="android:Widget.TextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:lineSpacingMultiplier">0.7</item>
        <item name="android:textColor">?textColorPrimary</item>
        <item name="fontType">poppingRegular</item>
    </style>

    <!-- Contents -->
    <style name="Widget.TextView.Body" parent="Widget.TextView">
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:textSize">@dimen/dynamic_body_text_size</item>
        <item name="fontType">poppingRegular</item>
    </style>

    <!-- Descriptions -->
    <style name="Widget.TextView.Description" parent="Widget.TextView">
        <item name="android:textColor">?textColorSecondary</item>
        <item name="android:textSize">@dimen/dynamic_body_text_size</item>
        <item name="fontType">poppingRegular</item>
    </style>

    <!-- Titles -->
    <style name="Widget.TextView.Title" parent="Widget.TextView">
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:textSize">@dimen/dynamic_title_text_size</item>
        <item name="fontType">poppingSemiBold</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/danger</item>
    </style>

</resources>
